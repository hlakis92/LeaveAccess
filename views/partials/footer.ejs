<!-- Display a success alert at the top-right position of the window -->
<button id="btnsucess" type="button" data-positionX="right" data-positionY="top" data-effect="fadeInUp" data-message=""
        data-type="success" class="btn pmd-ripple-effect btn-success pmd-z-depth pmd-alert-toggle"
        style="display: none;">Alert Success
</button>
<!-- Display an error alert at the top-right position of the window -->
<button id="btnfail" type="button" data-positionX="right" data-positionY="top" data-effect="fadeInUp" data-message=""
        data-type="error" class="btn pmd-ripple-effect btn-danger pmd-z-depth pmd-alert-toggle" style="display: none;">
    Alert Error
</button>

<button id="btnwarning" type="button" data-positionX="right" data-positionY="top" data-effect="fadeInUp"
        data-message="" data-type="warning" style="display: none;"
        class="btn pmd-ripple-effect btn-warning pmd-z-depth pmd-alert-toggle">Alert Warning
</button>

