<script>
function alert_message(message, type) {
    if (type == 'success') {
      $('#btnsucess').attr("data-message", message);
      $('#btnsucess').click();
    } else if (type == 'fail') {
      $('#btnfail').attr("data-message", message);
      $('#btnfail').click();
    }
    else if (type == 'warning') {
      $('#btnwarning').attr("data-message", message);
      $('#btnwarning').click();
    }
  }
</script>